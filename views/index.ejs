<!DOCTYPE html>
<html ng-app='MiaouMiam'>
<head>
    <title>MiaouMiam</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css'/>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'/>
    <link rel='stylesheet' href='/stylesheets/slider.css'/>
</head>
<body ng-controller='HomeController'>
<div class="container text-center">
    <div class="row">
        <div class="page-header">
            <h1>MiaouMiam</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button class='btn btn-primary btn-lg' ng-show='!feeding' ng-click='feed()'>Feed</button>
            <span ng-show='feeding'><i class='fa fa-cog fa-spin fa-4x'></i></span>
        </div>
        <div class="col-sm-12 col-md-offset-3 col-md-6">
            <div ng-disabled='feeding' ovts-slider='' model='config.quantity' ovts-slider-options='{label: "Quantity", min: 1, max: 20, step: 1}'></div>
        </div>
    </div>
    <hr />
    <h2>Schedule</h2>
    <div class="row">
        <form>
            <div class="col-sm-12">
                <div class="datepickerOuter">
                    <timepicker class="datepickerInner" ng-model='time' ng-change="updateTime()" show-meridian="ismeridian"></timepicker>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="btn-group">
                    <label class="btn btn-primary" ng-model="date.monday" btn-checkbox="'M'">M</label>
                    <label class="btn btn-primary" ng-model="date.tuesday" btn-checkbox="'T'">T</label>
                    <label class="btn btn-primary" ng-model="date.wednesday" btn-checkbox="'W'">W</label>
                    <label class="btn btn-primary" ng-model="date.thursday" btn-checkbox="'T'">T</label>
                    <label class="btn btn-primary" ng-model="date.friday" btn-checkbox="'F'">F</label>
                    <label class="btn btn-primary" ng-model="date.satursday" btn-checkbox="'S'">S</label>
                    <label class="btn btn-primary" ng-model="date.sunday" btn-checkbox="'S'">S</label>
                </div>
                <label class="btn btn-success" ng-click="addSchedule()">
                    <i ng-show='!savingCfg' class="fa fa-save"></i>
                    <i ng-show='savingCfg' class="fa fa-refresh fa-spin"></i>
                </label>
            </div>
        </form>
    </div>
    <hr />
    <h2>Scheduled</h2>
    <div ng-repeat="schedule in config.schedule">
        <div class="row">
            <div class="col-sm-12 col-md-offset-3 col-md-6">
                <span>{{schedule.hours}} : {{schedule.minutes}}</span>
                <div class="btn-group">
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.monday}">M</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.tuesday}">T</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.wednesday}">W</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.thursday}">T</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.friday}">F</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.satursday}">S</label>
                    <label class="btn btn-sm btn-primary" ng-class="{active: schedule.sunday}">S</label>
                </div>
                <label class="btn btn-sm btn-danger" ng-click="removeSchedule($index)">
                    <i ng-show='!savingCfg' class="fa fa-remove"></i>
                    <i ng-show='savingCfg' class="fa fa-refresh fa-spin"></i>
                </label>
            </div>
        </div>
    </div>
</div>

<script src='/js/angular.js'></script>
<script src='/js/angularui.min.js'></script>
<script src='/js/slider.js'></script>
<script src='/js/app.js'></script>
<script src='/js/controllers/HomeController.js'></script>

</body>
</html>
